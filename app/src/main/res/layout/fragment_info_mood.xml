<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/moodInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/lighterAuburn"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:visibility="visible"

        android:layout_centerInParent="true"
        android:layout_below="@id/topBarLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        >
        <TextView
            android:id="@+id/moodInfoDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moodSelectedDescLabel"
            android:textSize="12sp"
            android:textColor="@color/darkGreen"
            android:fontFamily="serif"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/moodInfoDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the description\n.\n.\n.\nend"
            android:textSize="12sp"
            android:textAlignment="center"
            android:fontFamily="serif"

            android:layout_centerHorizontal="true"
            android:layout_below="@id/moodInfoDescriptionLabel"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            />
        <ImageView
            android:id="@+id/moodInfoDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@drawable/custom_simple_line"

            android:layout_below="@+id/moodInfoDescriptionText"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/moodInfoLevelsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/moodSelectedLevelsLabel"
            android:textSize="12sp"
            android:textColor="@color/darkGreen"
            android:fontFamily="serif"

            android:layout_below="@id/moodInfoDivider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />
        <SeekBar
            android:id="@+id/moodInfoLevelsSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/moodInfoLevelsLabel"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>