<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    >
    <include layout="@layout/top_bar_alt"
        android:id="@+id/topBarLayout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        android:layout_below="@id/topBarLayout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/responseMusicPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/responseMusicPrompt"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textAlignment="center"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <ImageButton
                android:id="@+id/responseMusicMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/more_info"
                android:tint="@color/lightBlue"

                android:layout_toRightOf="@id/responseMusicPrompt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                />
            <!-- if clicked,
                 show layout until re-click i or click outside the shown layout
                 -->

            <ImageView
                android:id="@+id/responseMusicDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/simple_line"
                android:tint="@color/teal"

                android:layout_below="@+id/responseMusicPrompt"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <ImageButton
                android:id="@+id/responseMusicPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_circle"
                android:backgroundTint="@color/teal"
                style="@style/ResponseStyleAlt"

                android:layout_below="@id/responseMusicDivider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                />

            <TextView
                android:id="@+id/responseMusicTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="15sp"

                android:layout_below="@id/responseMusicPlayPause"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/responseMusicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of Song"
                android:textColor="@color/lighterAuburn"
                android:textSize="15sp"

                android:layout_below="@id/responseMusicTimestamp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/responseMusicArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="@color/white"
                android:textSize="15sp"

                android:layout_below="@id/responseMusicTitle"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </ScrollView>




    <include layout="@layout/extra_limited_alt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_below="@id/topBarLayout"
        android:id="@+id/include" />
</RelativeLayout>