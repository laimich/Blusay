    <style name="MoodResponseButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <!-- "@style/TextAppearance.AppCompat.Button" for button text font -->

    <style name="MoodResponseText" parent="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

